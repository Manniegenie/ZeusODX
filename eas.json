{
  "cli": {
    "version": ">=16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "node": "20.18.0",
      "env": { 
        "NODE_ENV": "development",
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
      },
      "channel": "development",
      "android": { "buildType": "apk" }
    },
    "preview": {
      "distribution": "internal",
      "node": "20.18.0",
      "env": { 
        "NODE_ENV": "staging",
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
      },
      "channel": "preview",
      "android": { "buildType": "apk" }
    },
    "production": {
      "autoIncrement": true,
      "node": "20.18.0",
      "env": { 
        "NODE_ENV": "production",
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
      },
      "channel": "production",
      "android": { "buildType": "app-bundle" }
    },
    "android-prod": {
      "extends": "production",
      "node": "20.18.0",
      "env": { 
        "NODE_ENV": "production",
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
      },
      "android": { "buildType": "apk" }
    }
  },
  "submit": {
    "production": {
      "android": { "track": "internal" }
    }
  }
}